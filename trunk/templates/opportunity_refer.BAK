									<td>O</td>
									<td>-</td>
									<td>-</td>
								{{elseif $auth == '3'}}
									<td>業務完了</td>
									<td>O</td>
									<td>-</td>
									<td>-</td>
								{{else}}
									<td>業務完了</td>
									<td>O</td>
									<td>-</td>
									<td>-</td>
								{{/if}}
						{{elseif $v.status == '4'}}
