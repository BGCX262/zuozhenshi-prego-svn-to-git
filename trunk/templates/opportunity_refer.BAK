										<a href="popup_all_states.php?id={{$v.id}}&&promise_id={{$v.promise_id}}&&spec_id={{$v.spec_id}}&&service_id={{$v.service_id}}&&status={{$v.status}}&&nm=popup_cancel_fee" class="popup">キャンセル</a>
									</td>
								{{/if}}
						{{elseif $v.status == '1'}}
								{{if $auth == '2'}}
